{
  "openapi": "3.0.0",
  "info": {
    "title": "Services For Users",
    "description": "This is an API that offers service to administration user",
    "version": "1.0.0",
    "contact": {
      "email": "alvarosenacs.c@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "List users",
        "description": "List all users in the database",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Create user",
        "description": "Create an user",
        "requestBody": {
          "post": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Email already taken"
          }
        }
      },
      "patch": {
        "tags": [
          "User"
        ],
        "summary": "Update user",
        "description": "Update user username",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/oauth": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Create session",
        "description": "Create session of user",
        "requestBody": {
          "post": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Invalid token"
          }
        }
      }
    }
  }
}